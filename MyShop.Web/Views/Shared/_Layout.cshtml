<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyShop Admin</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --primary-color: #0f172a;
            /* Màu đen than (Slate 900) - Sang trọng */
            --accent-color: #3b82f6;
            /* Màu xanh điểm nhấn */
            --bg-body: #f8fafc;
            /* Màu nền xám rất nhạt (Slate 50) */
            --text-main: #334155;
            /* Màu chữ xám đậm */
            --text-light: #64748b;
            /* Màu chữ phụ */
            --navbar-height: 70px;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-body);
            color: var(--text-main);
            -webkit-font-smoothing: antialiased;
            /* Làm mượt font chữ */
        }

        /* 1. Navbar Tối giản & Nổi bật */
        .navbar-custom {
            background-color: #ffffff;
            height: var(--navbar-height);
            box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
            /* Bóng đổ tinh tế */
            border-bottom: none;
            /* Bỏ viền cũ */
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.25rem;
            color: var(--primary-color) !important;
            letter-spacing: -0.5px;
        }

        .nav-link {
            font-weight: 500;
            color: var(--text-light) !important;
            font-size: 0.95rem;
            padding: 0.5rem 1rem !important;
            transition: all 0.2s ease;
            border-radius: 6px;
        }

        .nav-link:hover,
        .nav-link.active {
            color: var(--primary-color) !important;
            background-color: #f1f5f9;
            /* Hiệu ứng hover nhẹ */
        }

        /* 2. User Profile Section */
        .user-pill {
            background-color: #f1f5f9;
            padding: 0.4rem 1rem;
            border-radius: 50px;
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--primary-color);
            display: flex;
            align-items: center;
        }

        .btn-logout {
            color: #ef4444 !important;
            /* Màu đỏ nhẹ */
            font-weight: 500;
            font-size: 0.9rem;
            text-decoration: none;
            padding: 0.5rem 1rem;
            transition: opacity 0.2s;
        }

        .btn-logout:hover {
            opacity: 0.8;
        }

        /* 3. Footer tinh tế */
        .footer {
            background-color: #ffffff;
            border-top: 1px solid #e2e8f0;
            padding: 1.5rem 0;
            margin-top: auto;
            /* Đẩy footer xuống đáy */
            font-size: 0.875rem;
            color: var(--text-light);
        }

        .footer a {
            color: var(--text-main);
            text-decoration: none;
            font-weight: 500;
        }

        /* 4. Tùy chỉnh Container nội dung chính */
        .main-content {
            padding-top: 2rem;
            padding-bottom: 3rem;
        }

        /* Hiệu ứng Content Card (Nếu bạn muốn nội dung nằm trong khung trắng) */
        .content-card {
            background: white;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
            border: 1px solid #f1f5f9;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <div class="bg-dark text-white rounded-circle d-flex align-items-center justify-content-center me-2"
                        style="width: 32px; height: 32px;">
                        <i class="bi bi-shop" style="font-size: 0.9rem;"></i>
                    </div>
                    MyShop
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
                    data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                            <li class="nav-item mx-1">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-speedometer2 me-1"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item mx-1">
                                <a class="nav-link" asp-controller="Categories" asp-action="Index">Danh mục</a>
                            </li>
                            <li class="nav-item mx-1">
                                <a class="nav-link" asp-controller="Groups" asp-action="Index">Nhóm SP</a>
                            </li>
                            <li class="nav-item mx-1">
                                <a class="nav-link" asp-controller="Products" asp-action="Index">Sản phẩm</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav me-auto"></ul>
                    }

                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <div class="user-pill me-3">
                                    <i class="bi bi-person-circle me-2"></i>
                                    @User.Identity.Name
                                </div>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm"
                                    class="d-flex">
                                    <button type="submit"
                                        class="btn btn-logout bg-transparent border-0 d-flex align-items-center">
                                        <i class="bi bi-box-arrow-right me-1"></i> Thoát
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-dark btn-sm px-4 rounded-pill fw-medium" asp-controller="Account"
                                    asp-action="Login">Đăng nhập</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container main-content" style="margin-top: var(--navbar-height);">
        <main role="main">
            <div class="content-card fade-in">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="footer">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                &copy; 2025 <span class="fw-bold text-dark">MyShop Admin</span>. All rights reserved.
            </div>
            <div>
                <a asp-controller="Home" asp-action="Privacy" class="text-muted small hover-dark">Privacy Policy</a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>